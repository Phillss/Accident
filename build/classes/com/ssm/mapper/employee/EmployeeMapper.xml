<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mapper.employee.EmployeeMapper" >

	<!--针对员工信息  -->
	<!--插入一条员工信息  -->
	<insert id="insertEmployee" parameterType="com.ssm.pojo.Vo.Employeeinfo_t_Vo">
		INSERT INTO employeeinfo_t
		(em_id, em_name, em_position, em_number, em_sex, 
		em_companyName, em_departmentName, em_positionName, em_age, 
		em_phoneNumber, em_idCard) VALUES (#{em_id}, 
		#{em_name}, #{em_position}, #{em_number}, #{em_sex}, #{em_companyName},
		 #{em_departmentName}, #{em_positionName}, #{em_age}, #{em_phoneNumber}, 
		 #{em_idCard})
	</insert>
	
	<!--查询单个员工  -->
	<select id="employeeFindById" parameterType="String" resultType="com.ssm.pojo.Vo.Employeeinfo_t_Vo">
		SELECT * FROM employeeinfo_t WHERE em_id =#{value}
	</select>
	
	<!--查询所有  -->
	<select id="findall" parameterType="com.ssm.pojo.PageIndex" resultType="com.ssm.pojo.Vo.Employeeinfo_t_Vo">
		SELECT * FROM employeeinfo_t LIMIT #{current},#{per_record}
	</select>
	
	<!--查询所有记录数  -->
	<select id="findcounts" resultType="Integer">
		SELECT COUNT(*) FROM employeeinfo_t
	</select>
	
	<!--模糊查询  -->
	<select id="likefind" parameterType="com.ssm.pojo.PageIndex" 
 	resultType="com.ssm.pojo.Vo.Employeeinfo_t_Vo">
		SELECT * from employeeinfo_t LIMIT #{current},#{per_record}
	</select>
	
	<!--更新员工信息  -->
	<update id="updateemployee" parameterType="com.ssm.pojo.Vo.Employeeinfo_t_Vo">
		 
	</update>
	
	<!--删除一条员工信息  -->
	<delete id="deleteemployee" parameterType="String" >
		DELETE FROM employeeinfo_t WHERE em_id =#{value}
	</delete>
	
	
	
	
	<!--针对职位  -->
	<select id="selectPositionById" parameterType="String" resultType="com.ssm.pojo.Vo.Position_t_Vo">
		SELECT * FROM position_t WHERE po_id=#{value}
	</select>
	<select id="selectPositionByName" parameterType="String" resultType="com.ssm.pojo.Vo.Position_t_Vo">
		SELECT * FROM position_t WHERE po_name=#{value}
	</select>
	<insert id="addPosition" parameterType="com.ssm.pojo.Vo.Position_t_Vo">
		INSERT INTO position_t(po_id, po_departmentId, 
		po_name, po_departmentName,po_companyName) 
		VALUES (#{po_id}, #{po_departmentId}, #{po_name}, #{po_departmentName}, #{po_companyName})
	</insert>
	<update id="updatePosition"></update>
	<delete id="deletePosition" parameterType="String">
		DELETE FROM position_t WHERE po_id = #{value}
	</delete>
	
	
	<!--针对部门  -->
	<select id="selectDepartById" parameterType="String" resultType="com.ssm.pojo.Vo.Departmentinfo_t_Vo">
		SELECT * FROM departmentinfo_t WHERE de_id=#{value}
	</select>
	<select id="selectDepartByName" parameterType="String" resultType="com.ssm.pojo.Vo.Departmentinfo_t_Vo">
		SELECT * FROM departmentinfo_t WHERE de_name=#{value}
	</select>
	<insert id="addDepart" parameterType="com.ssm.pojo.Vo.Departmentinfo_t_Vo">
		INSERT INTO departmentinfo_t
		(de_id, de_name, de_companyId, de_companyName) 
		VALUES (#{de_id}, #{de_name}, #{de_companyId}, #{de_companyName})
	</insert>
	<update id="updateDepart"></update>
	<delete id="deleteDepart" parameterType="String">
		DELETE FROM departmentinfo_t WHERE de_id =#{value}
	</delete>
	
	
	<!--针对公司  -->
	<select id="selectCompanyById"  parameterType="String" resultType="com.ssm.pojo.Vo.Companyinfo_t_Vo">
		SELECT * FROM companyinfo_t WHERE co_id=#{value}
	</select>
	<select id="selectCompanyByName"  parameterType="String" resultType="com.ssm.pojo.Vo.Companyinfo_t_Vo">
		SELECT * FROM companyinfo_t WHERE co_name=#{value}
	</select>
	<insert id="addCompany" parameterType="com.ssm.pojo.Vo.Companyinfo_t_Vo">
		INSERT INTO companyinfo_t
		(co_id, co_name, co_createTime, co_introduce) 
		VALUES (#{co_id}, #{co_name}, #{co_createTime}, #{co_introduce})
	</insert>
	<update id="updateCompany"></update>
	<delete id="deleteCompany" parameterType="String">
		DELETE FROM companyinfo_t WHERE co_id = #{value}
	</delete>
	
</mapper>