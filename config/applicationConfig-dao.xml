<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:mvc="http://www.springframework.org/schema/mvc"
        xmlns:tx="http://www.springframework.org/schema/tx" xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd"> 
        <!--配置数据源  -->
        <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        	<property name="driverClass" value="com.mysql.jdbc.Driver"/>
        	<property name="jdbcUrl" value="jdbc:mysql://127.0.0.1:3306/ssm_Demo?useSSL=false"/>
        	<property name="user" value="root"/>
        	<property name="password" value="1234"/>
        	<property name="acquireIncrement" value="10"/>
        	<property name="initialPoolSize" value="20"/>
        	<property name="minPoolSize" value="5"/>
        	<property name="maxPoolSize" value="100"/>
        	<property name="maxIdleTime" value="60" />
        	<property name="acquireRetryAttempts" value="30" />
        	
        </bean>
        
        <!--配置sqlsessionFactory  -->
        <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
			<property name="configLocation" value="classpath:sqlMapConfig.xml"></property>
			<property name="dataSource" ref="dataSource"></property>    
        </bean>
        
        <!--配置mapper接口扫描器  -->
        <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        	<property name="basePackage" 
        	value="com.ssm.mapper.accident,
        		   com.ssm.mapper.user,
        		   com.ssm.mapper.accidentinfo
        		   com.ssm.mapper.accidentlevel
        		   com.ssm.mapper.industry
        		   com.ssm.mapper.checkinfo
        		   com.ssm.mapper.laws
        		   com.ssm.mapper.log
        		   com.ssm.mapper.result
        		   com.ssm.mapper.course
        		   com.ssm.mapper.employee
        		   com.ssm.mapper.causeclass"></property>
        	<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"></property>
        </bean>
</beans>